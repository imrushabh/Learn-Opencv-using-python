import cv2
import matplotlib.pyplot as plt

def main():
    
    path = "C:\\Users\\rusha\\Downloads\\Image Processsing\\Image_Database_Gonzalez\\mypic\\"
    import cv2
import matplotlib.pyplot as plt

def main():
    
    path = "C:\\Users\\rusha\\Downloads\\Image Processsing\\Image_Database_Gonzalez\\mypic\\"
    
    imgpath1 =  path + "4.2.01.tiff"

    
    img = cv2.imread(imgpath1, 1)
    
    img1 = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)

    img2 = abs(255-img1)

    
    titles = ['Color Image', 'Color-Negative']
    images = [img1, img2]
    
    print()
    
    plt.subplot(1, 2, 1)
    plt.imshow(images[0])
    plt.title(titles[0])
    plt.xticks([])
    plt.yticks([])
       
    plt.subplot(1, 2, 2)
    plt.imshow(images[1])
    plt.title(titles[1])
    plt.xticks([])
    plt.yticks([])
    

    plt.show()  
 
if __name__ == "__main__":
    main()
    
